<section class="sign-in-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-sm-12 col-12">
                    <div id= "slides" class="carousel slide" data-ride= "carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class= "img-fluid" src= "img/school_lockers.jpg">
                                    <div class="carousel-caption d-none d-md-block">
                                        <a href="#signUpContainer" class="intro-link js-scroll-trigger">Sign Up</a>
                                    </div>
                                </div>
                                <div class="carousel-item">
                                    <img class= "img-fluid" src= "img/desk_team.jpg">
                                    <a href="#signUpContainer" class="intro-link js-scroll-trigger">Sign Up</a>
                                </div>
                                <div class="carousel-item">
                                    <img class= "img-fluid" src= "img/schoolbag_student.jpg">
                                    <a href="#signUpContainer" class="intro-link js-scroll-trigger">Sign Up</a>
                                </div>
                            </div>
                        </div>
                </div>
                <div class="col-md-6 col-sm-12 col-12">
                    <div class="form-container" id="signUpContainer">
                        <div class="sign-up-container">
                            <h2 class="h3 form-title">Sign Up</h2>
                            <div class="nav nav-tabs justify-content-center" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Student</a>
                            </div>
                            <div class="tab-content" id="nav-tabContent">
                                <div class="tab-pane fade" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                                    
                                    <div class="collapse errorMessage">
                                            <div class="alert alert-danger" role="alert">
                                                  Your email is already registered. Click on "Sign In"
                                            </div>
                                    </div>
    
    
    
                                    <form id="student-signup-form" class="registration-form form-validation" action="/sign-up" method="post" novalidate oninput='confirmPassword.setCustomValidity(confirmPassword.value != password.value ? "Passwords do not match." : "")'>
                                        <div class="row">
                                            <div class="col-sm-6 col-12">
                                                  <div class="form-group">
                                                    <label for="studentFirstName">First Name</label>
                                                    <input type="text" class="form-control" name="firstName" id="studentFirstName" required>
                                                    <div class="invalid-feedback">
                                                        Please enter your first name.
                                                    </div>
                                                  </div>
                                            </div>
                                            <div class="col-sm-6 col-12">
                                                <div class="form-group">
                                                    <label for="studentLastName">Last Name</label>
                                                    <input type="text" class="form-control" name="lastName" id="studentLastName" required>
                                                    <div class="invalid-feedback">
                                                        Please enter your last name.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="studentEmailAddress">Email</label>
                                            <input type="email" class="form-control" name="emailAddress" id="studentEmailAddress" aria-describedby="emailHelp" required>
                                            <div class="invalid-feedback">
                                                Please enter a valid email address.
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="studentPhoneNumber">Phone</label>
                                            <input type="text" class="form-control"  name="phoneNumber" id="studentPhoneNumber" required>
                                            <div class="invalid-feedback">
                                                Please enter your phone number.
                                            </div>
                                        </div>
                                        <div class="row college">
                                            <div class="col-sm-12 col-12">
                                                <span>College</span>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label for="collegeName">Name of College you attend</label>
                                                    <select class="custom-select custom-select-sm form-control" id="collegeName" name="collegeName" required>
                                                        <option value=""></option>
                                                        <option value="queensCollege">Queens College</option>
                                                        <option value="cityCollege">City College</option>
                                                        <option value="hunterCollege">Hunter College</option>
                                                        <option value="brooklynCollege">Brooklyn College</option>
                                                    </select>
                                                    <div class="invalid-feedback">
                                                        Please select the college that you attend
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="studentPassword">Password</label>
                                            <input type="password" class="form-control" name="password" id="studentPassword" required>
                                            <div class="invalid-feedback">
                                                Please enter a password.
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="confirmstudentPassword">Confirm Password</label>
                                            <input type="password" class="form-control" name="confirmPassword" id="confirmstudentPassword" required>
                                            <div class="invalid-feedback" id="validate">
                                                Please confirm your password.
                                            </div>
                                        </div>
                                        <button type="submit" class="btn submit-btn theme-btn">Sign Up</button>
                                    </form>
                                </div>
                                  <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                                    
                                        
                                    <div class="collapse errorMessage">
                                            <div class="alert alert-danger" role="alert">
                                                  Your email is already registered. Click on "Sign In"
                                            </div>
                                    </div>
                                  </div>
                            </div>
                        </div>
    
                    </div>
                </div>
            </div>
